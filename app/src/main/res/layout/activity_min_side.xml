<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E9"
    android:orientation="vertical"
    tools:context=".Min_Side_Activity"
    >


    <fragment
        android:id="@+id/text_fragment"
        android:name="com.example.nicolai.sensmotiongruppe5.Fragments.Text_fragment"
        android:layout_width="361dp"
        android:layout_height="174dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.nicolai.sensmotiongruppe5.Rute.Rute_Canvas
        android:id="@+id/canvas_rute"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_fragment"
        app:layout_constraintVertical_bias="0.768" />

    <Button
        android:id="@+id/button_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="walk"
        app:layout_constraintBottom_toTopOf="@+id/canvas_rute"
        app:layout_constraintEnd_toStartOf="@+id/button_running"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="8dp"
        android:text="Run"
        app:layout_constraintBottom_toTopOf="@+id/canvas_rute"
        app:layout_constraintEnd_toStartOf="@+id/button_bike" />

    <Button
        android:id="@+id/button_bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="Cycle"
        app:layout_constraintBottom_toTopOf="@+id/canvas_rute"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>